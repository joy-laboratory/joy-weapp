<template>
  <view class='page'>
    <view class='doc-body'>
      <view class='panel'>
        <view class='panel-title'>基本</view>
        <view class='panel-content'>
          <view class="basic-action" @tap="basicClick">唤醒输入框</view>
          <view class="basic-action" @tap="basicClick2">隐藏输入框</view>
          <view hidden="{{textareaShow}}">
            <JoyComment :focus.sync="focus"/>
          </view>
        </view>
      </view>
    </view>
  </view>
</template>
<script>
import wepy from 'wepy'
import JoyComment from '@/components/comment/index'
export default class CommentPage extends wepy.page {
  config = {
    navigationBarTitleText: 'Comment 评论'
  }
  components = {
    JoyComment
  }
  data = {
    textareaShow: true,
    focus: false
  }

  events = {
    'on-confirm'() {
      wx.showToast({
        title: '点击了发布按钮',
        icon: 'none'
      })
    },
    'on-blur'() {
      this.textareaShow = true
      this.focus = false
      this.$apply()
    }
  }

  methods = {
    basicClick() {
      this.textareaShow = false
      this.focus = true
      this.$apply()
    },
    basicClick2() {
      this.textareaShow = true
      this.focus = false
      this.$apply()
    }
  }
}
</script>
